<div class="facts_stats_inline">
	<div class="fs-row">
		<div class="fs-cell">
			<div class="facts_stats_inline_inner">
				<ul class="facts_stats_inline_items">
					{% for item in items %}
						<li class="facts_stats_inline_item">
							<h2 class="facts_stats_inline_stat">
								<div class="facts_stats_inline_stat_figure">
									{{ item.statistic }}
								</div>

								<div class="facts_stats_inline_stat_context">
									{{ item.context }}
								</div>
							</h2>

							<div class="facts_stats_inline_desc">
								{{ item.description }}
							</div>

							{% if item.link %}
								<div class="facts_stats_inline_link_wrap">
									{% include '@partial-link' with {
										class: 'facts_stats_inline',
										title: item.link.label,
										url: item.link.url,
										icon: null,
										aria: item.link.aria
									} %}
								</div>
							{% endif %}
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
</div>
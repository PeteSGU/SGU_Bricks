{% extends "_base.twig" %}

{% block content %}
	<div class="full_width_callouts" id="skip_content" tabindex="-1">
		{% include "partials/filter.twig" with {
			tools: filters,
			results_count: results_count,
			results_text: results_text,
			page_link: page_link,
		} %}

		{% include "partials/department/department-list.twig" with {
			items: posts,
			page_link:  page_link,
			pagination: posts.pagination,
		} %}

		{% if not posts|length %}
			{% include "partials/no-results-message.twig" %}
		{% endif %}
	</div>
{% endblock %}
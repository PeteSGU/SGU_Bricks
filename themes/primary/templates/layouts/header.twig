<header
	id="header"
	class="
		js-header
		header
		theme_{{ page_theme }}
		{% if page.background %} has_background_image {% endif %}
		{% if has_page_media %} has_content_image {% endif %}
		{% if page.cta %} has_cta {% endif %}
	"
>
	<a class="skip_link skip_main" id="skip_link" href="#skip_content">Skip to main content</a>
	
	<a class="js-swap js-skip-alert skip_link skip_alert" id="alert_link" href="#alert" data-swap-target=".js-alert" data-swap-linked="alert">Skip to site alert</a>

	<div class="header_main">
		{% if page.background %}
			<figure class="header_bg_figure">
				{% include 'partials/image.twig' with {
					class: 'header_bg',
					image: page.background,
					loading: 'eager',
					sources: [
						"wide-xlrg",
						"wide-lrg",
						"wide-med",
						"wide-sml",
						"wide-xsml",
						"wide-xxsml"
					]
				} %}
			</figure>
		{% endif %}

		<div class="header_main_texture"></div>

		<div class="header_main_group">
			<div class="header_ribbon">
				<div class="fs-row">
					<div class="fs-cell">
						<div class="header_ribbon_inner">
							<div class="header_school_nav">
								{% include "navigation/basic.twig" with {
									class: "school",
									modifier: "",
									title: "School",
									links: global.menu.school_navigation.items,
								} %}
							</div>

							<div class="header_ribbon_group">
								<button class="header_chat_button">
									<span class="header_chat_button_label">Chat</span>
									<span class="header_chat_button_icon">{{ icon("chat") }}</span>
								</button>

								<div class="header_search">
									{% include "partials/search.twig" with {
										modifier: "header",
										aria: "Site Search",
										label: "Search",
										button_text: "Submit"
									} %}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="header_primary">
				<div class="fs-row">
					<div class="fs-cell">
						<div class="header_primary_inner">
							<div class="header_logo">
								{% include "partials/logo.twig" with {
									modifier: "header",
									icon: page_logo
								} %}
							</div>

							<div class="header_primary_group">
								<div class="header_secondary_nav">
									{% include "navigation/dropdown.twig" with {
										class: "secondary_dropdown",
										modifier: "",
										title: "Secondary",
										links: menu.secondary_navigation.items,
										icon: "chevron_down"
									} %}
								</div>

								<div class="header_menu">
									{% include "partials/link-toggle.twig" with {
										class: "menu",
										js: true,
										title: "Menu",
										url: "#menu",
										icon: "menu",
										swap_target: ".menu",
										swap_link: "menu"
									} %}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			{% if page.cta %}
				{% include "partials/page-header--cta.twig" %}
			{% elseif 'layout_news_detail' in page.classes %}
				{% include "partials/page-header--news-detail.twig" %}
			{% else %}
				{% include "partials/page-header.twig" %}
			{% endif %}
		</div>

		{% if not page.no_decoration %}
			<div class="header_main_decoration"></div>
		{% endif %}
	</div>

	{% if sub_nav %}
		<div class="header_suppliment">
			<div class="page_nav">
				<div class="fs-row">
					<div class="fs-cell">
						<div class="page_nav_inner">
							<a class="skip_link skip_subnav" id="skip_sub_link" href="#page_content">Skip Sub Navigation</a>
							<div class="page_nav_flat">
								{% include 'navigation/basic.twig' with {
									class: 'sub_flat',
									modifier: '',
									title: page.title,
									links: sub_nav
								} %}
							</div>
							
							<div class="page_nav_toggle">
								{% include 'navigation/toggle.twig' with {
									class: 'sub',
									modifier: '',
									title: page.title|lower,
									links: sub_nav,
									icon: '',
									child_icon: '',
									toggle: {
										title: 'Explore This Section',
										icon: 'chevron_down',
										title_active: 'Explore This Section',
										icon_active: 'chevron_down',
										swap_target: '.js-sub-nav-group'
									}
								} %}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endif %}
</header>
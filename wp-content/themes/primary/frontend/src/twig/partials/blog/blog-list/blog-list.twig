<!-- Blog List -->
<div class="blog_list">
	<div class="fs-row">
		<div class="fs-cell">
			<div class="blog_list_inner">
				{% if category %}
					<p class="blog_list_header">Showing <span class="blog_list_header_label">{{ category }}</span></p>
				{% endif %}
				<ul class="blog_list_rows" id="item_list" aria-label="{{ page.title }}">
					{% for item in items %}
						<li class="blog_list_row">
							<div class="blog_list_item">
								<div class="blog_list_item_media">
									<figure class="blog_list_item_figure">
										<a class="blog_list_item_figure_link" href="{{ item.url }}" aria-label="Read more about {{ item.title }}" tabindex="-1">
											{% include '@partial-image' with {
												class: 'blog_list_item',
												alt: '',
												image: item.image,
												loading: 'lazy',
												sources: [
													img.classic.med,
													img.classic.sml,
													img.classic.xsml,
													img.classic.xxsml
												]
											} %}
										</a>
										{% if item.video %}
											<span class="blog_list_item_media_icon">{{ icon("video") }}</span>
										{% elseif item.podcast %}
											<span class="blog_list_item_media_icon">{{ icon("podcast") }}</span>
										{% endif %}
									</figure>
								</div>
								<div class="blog_list_item_wrapper">
									<div class="blog_list_item_header">
										<h2 class="blog_list_item_title">
											{% include '@partial-link' with {
												class: 'blog_list_item_title',
												title: item.title,
												url: item.url
											} %}
										</h2>
										<div class="blog_list_item_details">
											<div class="blog_list_item_detail blog_list_item_date">
												<span class="blog_list_item_detail_hint">Published:&nbsp;</span>
												<time class="blog_list_item_detail_label" datetime="{{ item.date }}">{{ item.date|date('F j, Y') }}</time>
											</div>
											<div class="blog_list_item_detail blog_list_item_categories">
												<div class="blog_list_item_detail_hint">Categories</div>
												<ul class="blog_list_item_detail_label" aria-label="Categories">
													{% for category in item.categories %}
														<li class="blog_list_item_category">
															<a class="blog_list_item_category_link" href="{{ category.url }}">{{ category.label }}</a>
														</li>
													{% endfor %}
												</ul>
											</div>
										</div>
									</div>
									<div class="blog_list_item_body">
										<div class="blog_list_item_description">
											<p>{{ item.description }}</p>
										</div>
									</div>
								</div>
							</div>
						</li>
					{% endfor %}
				</ul>
				<div class="blog_list_pagination">
					{% include '@partial-pagination' with {
						title: 'News Pagination',
						pages: 50
					} %}
				</div>
			</div>
		</div>
	</div>
</div>
<!-- END: Blog List -->

{% set image = instanceof(image, "\Timber\Image") ? image : Image(image)%}
{% set image_meta = framework_fn("get_image_attributes", image, sources, alt|default(image.alt)) %}

<img
	class="{{ class }}_image"
	{% if image_meta.srcset|length > 1 %}
	srcset="{{ image_meta.srcset }}"
	{% endif %}
	{% if sizes %}
	sizes="{{ sizes|join(', ') }}"
	{% endif %}
	src="{{ image_meta.default_size }}"
	{% if  image_meta.alt %}
	alt="{{ image_meta.alt|e('html_attr') }}"
	{% endif %}
	loading="{{ loading ?: 'lazy' }}"
	width="{{ image_meta.width }}"
	height="{{ image_meta.height }}"
/>